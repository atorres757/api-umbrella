{{apis/sub-settings-form model=subSettingsModel collection=model.subSettings roleOptions=roleOptions openModal=openModal}}

<table id="sub_settings_table" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th style="width: 110px;">HTTP Method</th>
      <th>URL Matcher</th>
      <th></th>
      <th class="reorder-handle"></th>
    </tr>
  </thead>
  <tbody>
    {{#if model.subSettings}}
      {{#each model.subSettings as |subSettings|}}
        <tr data-guid="{{guid-for subSettings}}">
          <td>{{subSettings.httpMethod}}</td>
          <td>{{subSettings.regex}}</td>
          <td class="table-row-actions" style="width: 90px; white-space: nowrap;">
            <a href="#" {{action "edit" subSettings}}><i class="fa fa-pencil"></i>Edit</a>
            <a href="#" class="remove-action" {{action "remove" subSettings}}><i class="fa fa-times"></i>Remove</a>
          </td>
          <td class="reorder-handle"><i class="fa fa-reorder"></i></td>
        </tr>
      {{/each}}
    {{else}}
      <tr class="empty"><td colspan="3">No sub-URL request settings have been added yet. Click "Add URL Settings" below to get started.</td></tr>
    {{/if}}
  </tbody>
</table>
<div class="row-fluid">
  <div class="span6">
    <button type="button" class="btn btn-default btn-xs" {{action "add"}}><i class="fa fa-plus-circle"></i> Add URL Settings</button>
  </div>
  <div class="span6 text-right">
    {{#if isReorderable}}
      <button type="button" class="btn btn-default btn-xs" {{action "reorderCollection" "sub_settings"}}><i class="fa fa-reorder"></i> <span class="reorder-button-text">Reorder</span></button>
    {{/if}}
  </div>
</div>
